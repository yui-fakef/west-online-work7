<%
let bodyContent = `<section class="posts">
  <h1>文章列表</h1>`;
  
if (posts.length === 0) {
  bodyContent += `<p>暂无文章</p>`;
} else {
  bodyContent += `<ul class="post-list">`;
  
  posts.forEach(post => {
    bodyContent += `
      <li>
        <h2><a href="${post.url}">${post.title}</a></h2>
        <p class="date">发布日期: ${post.date}</p>
        <div class="excerpt">${post.excerpt}</div>
        <a href="${post.url}" class="read-more">阅读全文</a>
      </li>`;
  });
  
  bodyContent += `</ul>`;
}
// 添加分页导航
if (pagination && pagination.totalPages > 1) {
  bodyContent += `<div class="pagination">`;
  
  if (pagination.prev) {
    bodyContent += `<a href="${pagination.prev === 1 ? 'index.html' : `page/${pagination.prev}/index.html`}" class="prev">上一页</a>`;
  }
  
  bodyContent += `<span>第 ${pagination.currentPage} 页 / 共 ${pagination.totalPages} 页</span>`;
  
  if (pagination.next) {
    bodyContent += `<a href="page/${pagination.next}/index.html" class="next">下一页</a>`;
  }
  
  bodyContent += `</div>`;
}

bodyContent += `</section>`;
%>

<%- include('base', { 
  title: '首页',
  bodyContent: bodyContent 
}) %>